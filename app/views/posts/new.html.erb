<h1>New Posts</h1>

<%= form_for @post do |f| %> <!-- #a rails helper talking with model -->
<p>
  <%= f.label :title %> <br><!-- #think of label as a header in table -->
  <%= f.text_area :title %> <br>
  </p>
  <p>
  <%= f.label :body %> <br>
  <%= f.text_area :body %> <br>
  </p>
  <p>
  	<%= f.submit %>
  </p>
  <% end %>